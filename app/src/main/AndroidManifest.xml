<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.arjunkrishnababu96.snapevent">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.github.arjunkrishnababu96.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
            <meta-data
                android:name="io.github.arjunkrishnababu96.snapevent.GlideConfiguration"
                android:value="GlideModule" />
        </provider>

        <activity
            android:name="com.github.arjunkrishnababu96.snapevent.io.github.arjunkrishnababu96.snapevent.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.github.arjunkrishnababu96.snapevent.io.github.arjunkrishnababu96.snapevent.AboutPageActivity"
            android:parentActivityName="com.github.arjunkrishnababu96.snapevent.io.github.arjunkrishnababu96.snapevent.MainActivity">
            <meta-data android:name="android.suppose.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>